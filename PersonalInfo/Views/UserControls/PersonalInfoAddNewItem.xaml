                                        </EventTrigger>
                                    </Button.Triggers>
                                </Button>
                                <Button Margin="0,0,0,0" Grid.Row="11" Grid.Column="3" Content="{DynamicResource Save}" IsDefault="True"
                                        Width="100" Height="25"
                                        VerticalAlignment="Center" VerticalContentAlignment="Center"
                                        HorizontalAlignment="Right" FontSize="12"
                                        Style="{DynamicResource roundButton}" Background="{DynamicResource PasswordBossGreenColor}" Foreground="{DynamicResource WhiteColor}"
                                        Padding="0,1,0,0" Command="{Binding SaveShareCommand}" />

                            </Grid>
                            <!--second row content-->
                            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5">
