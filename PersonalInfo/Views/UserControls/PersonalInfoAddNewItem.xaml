                                       HorizontalAlignment="Right"/>
                                <!-- Old content -->
                                <!--<StackPanel Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2">
                                    <Image Source="{Binding NewItemImage}" Width="49" Height="45" />
                                    <TextBlock HorizontalAlignment="Center"
                                               Foreground="#007EE6" FontWeight="Bold"
                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />
