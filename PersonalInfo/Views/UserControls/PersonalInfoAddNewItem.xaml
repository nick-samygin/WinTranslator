<UserControl x:Class="PasswordBoss.Views.UserControls.PersonalInfoAddNewItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" x:Name="PersonalInfoAddNewItemControl"
             xmlns:local="clr-namespace:PasswordBoss.Views.UserControls"
             xmlns:helpers="clr-namespace:PasswordBoss.Helpers"
             xmlns:gl="clr-namespace:System.Globalization;assembly=mscorlib"
             Height="Auto" Width="Auto">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisiblity" />
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" BorderThickness="0.5,0,0,0" BorderBrush="{DynamicResource AccountSettingsGrayBackgroundColor}">
                <TabControl x:Name="AddNewItemTabControl" Style="{DynamicResource AddControlTabControlStyle}" Width="330"
                            SelectedIndex="{Binding SelectedIndexTabControl,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding TabSelectionChangedCommand}"
                                                   CommandParameter="{Binding ElementName=AddNewItemTabControl}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <TabControl.Resources>
                        <Style TargetType="{x:Type TabItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TabItem}">
                                        <Grid x:Name="grid">
                                            <Border Name="Border" Background="{DynamicResource TextboxBorderbrush}" BorderThickness="0 2 0 0">
                                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                                                            VerticalAlignment="Center">
                                                    <ContentPresenter ContentSource="Header" VerticalAlignment="Center"
                                                                      HorizontalAlignment="Stretch" />
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource WhiteColor}" />
                                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PasswordBossGreenColor}" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource TextboxBorderbrush}" />
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource TextboxBorderbrush}" />
                                                <!--<Setter Property="BorderThickness" Value="0.5"/>
                                        <Setter Property="BorderThickness" Value="{DynamicResource AccountSettingsGrayBackgroundColor}"/>-->
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    <TabItem x:Name="tabSettings" Height="30" Width="163" Background="{DynamicResource WhiteColor}" BorderThickness="0"
                             BorderBrush="White">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image x:Name="imgTabSet" Source="{Binding SettingTabIcon}" Height="15" Width="15"
                                       HorizontalAlignment="Right" />
                                <TextBlock Margin="10,0,0,0" HorizontalAlignment="Center"
                                           Style="{DynamicResource AddcontrolTextBlockStyle}"
                                           FontFamily="{DynamicResource ProximaBold}" Text="{DynamicResource Settings}" />
                            </StackPanel>
                        </TabItem.Header>
                        <TabItem.Content>

                                <Grid Background="{DynamicResource WhiteColor}" Height="Auto" Margin="0,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" MaxHeight="80" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="70" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Grid.Column="1" Width="240" Margin="0,0,0,0" HorizontalAlignment="Left">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="10" />
                                            <RowDefinition Height="65" />
                                            <RowDefinition Height="10" />
                                        </Grid.RowDefinitions>

                                    <Image Source="{Binding NewItemImage, UpdateSourceTrigger=PropertyChanged}" Height="65" Width="110" 
                                               Grid.Row="1" HorizontalAlignment="Left" />

                                        <Grid Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <StackPanel Margin="0,0,0,0" Grid.Row="0" Orientation="Horizontal"
                                                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                Visibility="{Binding DatesVisibility, Converter={StaticResource BoolToVisiblity}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                                <TextBlock Text="{DynamicResource CreatedDate}" HorizontalAlignment="Right"
                                                       FontSize="9" Foreground="{DynamicResource WatermarkLightGrayColor}"
                                                       Style="{DynamicResource AddcontrolTextBlockStyle}" />
                                                <TextBlock Text="{Binding DateCreated, StringFormat=d, UpdateSourceTrigger=PropertyChanged}"
                                                       HorizontalAlignment="Right" FontSize="9" Foreground="{DynamicResource WatermarkLightGrayColor}"
                                                       Style="{DynamicResource AddcontrolTextBlockStyle}" Padding="7 0 0 0"/>
                                            </StackPanel>
                                            <StackPanel Grid.Row="1" Margin="0,7,0,0" VerticalAlignment="Top"
                                                Orientation="Horizontal" HorizontalAlignment="Right"
                                                Visibility="{Binding DatesVisibility, Converter={StaticResource BoolToVisiblity}, UpdateSourceTrigger=PropertyChanged}">
                                                <TextBlock Text="{DynamicResource LastModifiedDate}"
                                                       HorizontalAlignment="Right" FontSize="9" Foreground="{DynamicResource WatermarkLightGrayColor}"
                                                       Style="{DynamicResource AddcontrolTextBlockStyle}" />
                                                <TextBlock Text="{Binding DateModified, StringFormat=d, UpdateSourceTrigger=PropertyChanged}"
                                                       HorizontalAlignment="Right" FontSize="9" Foreground="{DynamicResource WatermarkLightGrayColor}"
                                                       Style="{DynamicResource AddcontrolTextBlockStyle}" Padding="7 0 0 0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>

                                    <ScrollViewer x:Name="PersonalInfoScroller" Grid.Row="1" Grid.Column="1" HorizontalScrollBarVisibility="Disabled"
                                                  VerticalScrollBarVisibility="Auto" Margin="0,0,3,0"
                                                  Template="{DynamicResource CustomScrollViewerTemplate}">
                                        <AdornerDecorator>
                                            <Grid Margin="0,0,0,0">
                                                
                                                <!-- Names grid -->
                                                <Grid x:Name="AddNamesGrid" Grid.Row="1" Grid.Column="1"
                                                      Margin="0,0,0,0"
                                                      Visibility="{Binding NamesContentVisibility, Converter={StaticResource BoolToVisiblity}, UpdateSourceTrigger=PropertyChanged}">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="10" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="6" />
                                                    <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="6" />
                                                    <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="6" />
                                                    <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="6" />
                                                        <RowDefinition Height="46" />
                                                    </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="165" />
                                                    <ColumnDefinition Width="25" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <!--first row-->
                                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                                               Text="{DynamicResource FirstName}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />
                                                    <TextBox x:Name="TextBoxNames" Grid.Row="1" Grid.Column="2"
                                                             Template="{DynamicResource AddControlTextboxTemplate}"
                                                             HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                                             Style="{DynamicResource AddControlTextBoxStyle}"
                                                             IsReadOnly="{Binding ReadonlySecureItem}"
                                                             Text="{Binding NamesFirstName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Mode=TwoWay}" />
                                                    <TextBlock Grid.Row="1" Grid.Column="2" IsHitTestVisible="False" Text="{DynamicResource RequiredField}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Red" FontStyle="Italic">
                                                        <TextBlock.Style>
                                                            <Style TargetType="{x:Type TextBlock}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <MultiDataTrigger>
                                                                        <MultiDataTrigger.Conditions>
                                                                            <Condition Binding="{Binding Text, ElementName=TextBoxNames}" Value=""/>
                                                                            <Condition Binding="{Binding IsValidErrorMessageVisible}" Value="true" />
                                                                        </MultiDataTrigger.Conditions>
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </MultiDataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <!--second row-->
                                                    <TextBlock Grid.Row="3" Grid.Column="0"
                                                               Text="{DynamicResource MiddleName}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />
                                                    <TextBox Grid.Row="3" Grid.Column="2"
                                                             Template="{DynamicResource AddControlTextboxTemplate}"
                                                             HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                                             Style="{DynamicResource AddControlTextBoxStyle}"
                                                             IsReadOnly="{Binding ReadonlySecureItem}"
                                                             Text="{Binding NamesMiddleName, UpdateSourceTrigger=PropertyChanged}" />
                                                    <!--Third row-->
                                                    <TextBlock Grid.Row="5" Grid.Column="0"
                                                               Text="{DynamicResource LastName}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />
                                                    <TextBox Name="txtNamesLastName"  Grid.Row="5" Grid.Column="2"
                                                             Template="{DynamicResource AddControlTextboxTemplate}"
                                                             HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                                             Style="{DynamicResource AddControlTextBoxStyle}"
                                                             IsReadOnly="{Binding ReadonlySecureItem}"
                                                             Text="{Binding NamesLastName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Mode=TwoWay}" />
                                                    <TextBlock Grid.Row="5" Grid.Column="2" IsHitTestVisible="False" Text="{DynamicResource RequiredField}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Red" FontStyle="Italic">
                                                        <TextBlock.Style>
                                                            <Style TargetType="{x:Type TextBlock}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <MultiDataTrigger>
                                                                        <MultiDataTrigger.Conditions>
                                                                            <Condition Binding="{Binding Text, ElementName=txtNamesLastName}" Value=""/>
                                                                            <Condition Binding="{Binding IsValidErrorMessageVisible}" Value="true" />
                                                                        </MultiDataTrigger.Conditions>
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </MultiDataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <!--Fourth row-->
                                                    <TextBlock Grid.Row="7" Grid.Column="0"
                                                               Text="{DynamicResource TextForCategory}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />

                                                    <!--<TextBox Grid.Row="7" Grid.Column="2"    Template="{DynamicResource AddControlTextboxTemplate}" 
                                                          HorizontalAlignment="Stretch" VerticalAlignment="Center" Style="{DynamicResource AddControlTextBoxStyle}"/>-->
                                                    <ComboBox x:Name="PersonalInfoNameCategoryComboBox" Grid.Row="7"
                                                              Grid.Column="2" HorizontalAlignment="Stretch"
                                                              VerticalAlignment="Stretch"
                                                              HorizontalContentAlignment="Left"
                                                              ItemsSource="{Binding Categories}"
                                                              SelectedItem="{Binding SelectedCategory, UpdateSourceTrigger=PropertyChanged}"
                                                              Style="{DynamicResource AddControlComboboxStyle}"
                                                              ItemContainerStyle="{DynamicResource LocationComboboxItemStyle}"
                                                              TextSearch.TextPath="Name" IsTextSearchEnabled="True"
                                                              IsEnabled="{Binding Enabled}">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding Name}" />
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>


                                                    <Image  Grid.Row="7" Grid.Column="3" Margin="0,0,0,0"
                                                           ToolTip="{DynamicResource AddNewCategory}"
                                                           Style="{DynamicResource AddCategoryImageStyle}"
                                                           Height="15" RenderOptions.BitmapScalingMode="HighQuality">
                                                        <Image.InputBindings>
                                                            <MouseBinding MouseAction="LeftClick"
                                                                          Command="{Binding AddCategoryClickCommand}"/>
                                                        </Image.InputBindings>
                                                    </Image>

                                                    <!--Password generator UI ends-->
                                                    <!--fifth row-->
                                                    <TextBlock Grid.Row="9" Grid.Column="0"
                                                               Text="{DynamicResource Notes}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />

                                                    <TextBox Grid.Row="9" Grid.Column="2"
                                                             Height="46" Width="170" Style="{DynamicResource NotesTextBoxStyle}"
                                                             IsReadOnly="{Binding ReadonlySecureItem}"
                                                             Text="{Binding NamesNotes, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                                    <!--sixth row-->

                                                </Grid>
                                                
                                                <!-- Address grid -->
                                                <Grid x:Name="AddAddress" Grid.Row="1" Grid.Column="1"
                                                      Margin="0,0,0,0"
                                                      Visibility="{Binding AddressContentVisibility, Converter={StaticResource BoolToVisiblity}, UpdateSourceTrigger=PropertyChanged}">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="10" />
                                                    <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="6" />
                                                    <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="6" />
                                                    <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="6" />
                                                    <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="6" />
                                                    <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="6" />
                                                    <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="6" />
                                                    <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="6" />
                                                    <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="6" />
                                                    <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="6" />
                                                        <RowDefinition Height="46" />

                                                    </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="165" />
                                                    <ColumnDefinition Width="25" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <!--first row-->
                                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                                               Text="{DynamicResource Nickname}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />
                                                    <TextBox Grid.Row="1" Grid.Column="2"
                                                             Template="{DynamicResource AddControlTextboxTemplate}"
                                                             HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                                             Style="{DynamicResource AddControlTextBoxStyle}"
                                                             IsReadOnly="{Binding ReadonlySecureItem}"
                                                             Text="{Binding AddressNickname, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />


                                                    <!--second row-->
                                                    <TextBlock Grid.Row="3" Grid.Column="0"
                                                               Text="{DynamicResource Country}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />
                                                    <ComboBox Grid.Row="3" Grid.Column="2" VerticalAlignment="Stretch"
                                                              HorizontalContentAlignment="Left"
                                                              ItemsSource="{Binding Countries, UpdateSourceTrigger=PropertyChanged}"
                                                              SelectedItem="{Binding SelectedCountry, UpdateSourceTrigger=PropertyChanged}"
                                                              Style="{DynamicResource AddControlComboboxStyle}"
                                                              ItemContainerStyle="{DynamicResource LocationComboboxItemStyle}"
                                                              TextSearch.TextPath="Name" IsTextSearchEnabled="True"
                                                              IsEnabled="{Binding Enabled}">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding Value}" />
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                    <!--Third row-->
                                                    <TextBlock Grid.Row="5" Grid.Column="0"
                                                               Text="{DynamicResource Address1}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />
                                                    <TextBox Name="txtAddress1" Grid.Row="5" Grid.Column="2"
                                                             Template="{DynamicResource AddControlTextboxTemplate}"
                                                             HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                                             Style="{DynamicResource AddControlTextBoxStyle}"
                                                             IsReadOnly="{Binding ReadonlySecureItem}"
                                                             Text="{Binding Address1, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Mode=TwoWay}" />
                                                    <TextBlock Grid.Row="5" Grid.Column="2" IsHitTestVisible="False" Text="{DynamicResource RequiredField}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Red" FontStyle="Italic">
                                                        <TextBlock.Style>
                                                            <Style TargetType="{x:Type TextBlock}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <MultiDataTrigger>
                                                                        <MultiDataTrigger.Conditions>
                                                                            <Condition Binding="{Binding Text, ElementName=txtAddress1}" Value=""/>
                                                                            <Condition Binding="{Binding IsValidErrorMessageVisible}" Value="true" />
                                                                        </MultiDataTrigger.Conditions>
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </MultiDataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <!--Fourth row-->
                                                    <TextBlock Grid.Row="7" Grid.Column="0"
                                                               Text="{DynamicResource Address2}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />

                                                    <TextBox Grid.Row="7" Grid.Column="2"
                                                             Template="{DynamicResource AddControlTextboxTemplate}"
                                                             HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                                             Style="{DynamicResource AddControlTextBoxStyle}"
                                                             IsReadOnly="{Binding ReadonlySecureItem}"
                                                             Text="{Binding Address2, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                                                <!--<Image Grid.Row="7" Grid.Column="3" Margin="4,0,0,0"
                                                           HorizontalAlignment="Left" VerticalAlignment="Center"
                                                           ToolTip="{DynamicResource Paste}"
                                                           Style="{DynamicResource FileImageStyle}" Height="15" Width="12" />-->

                                                <!--fifth row-->
                                                    <TextBlock Grid.Row="9" Grid.Column="0"
                                                               Text="{DynamicResource AptSuite}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />

                                                    <TextBox Grid.Row="9" Grid.Column="2"
                                                             Template="{DynamicResource AddControlTextboxTemplate}"
                                                             HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                                             Style="{DynamicResource AddControlTextBoxStyle}"
                                                             IsReadOnly="{Binding ReadonlySecureItem}"
                                                             Text="{Binding AddressAptSuit, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                                    <!--sixth row-->
                                                    <TextBlock Grid.Row="11" Grid.Column="0"
                                                               Text="{DynamicResource City}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />
                                                    <TextBox Grid.Row="11" Grid.Column="2"
                                                             Template="{DynamicResource AddControlTextboxTemplate}"
                                                             HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                                             Style="{DynamicResource AddControlTextBoxStyle}"
                                                             IsReadOnly="{Binding ReadonlySecureItem}"
                                                             Text="{Binding AddressCity, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                                                    <!--Seventh row-->
                                                    <TextBlock Grid.Row="13" Grid.Column="0"
                                                               Text="{DynamicResource State}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />
                                                    <TextBox Name="IssueBankTextBox" Grid.Row="13" Grid.Column="2"
                                                             Template="{DynamicResource AddControlTextboxTemplate}"
                                                             HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                                             Style="{DynamicResource AddControlTextBoxStyle}"
                                                             IsReadOnly="{Binding ReadonlySecureItem}"
                                                             Text="{Binding AddressState, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                                                    <!--Eigthth row-->
                                                    <TextBlock Grid.Row="15" Grid.Column="0"
                                                               Text="{DynamicResource ZipCode}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />
                                                    <TextBox Grid.Row="15" Grid.Column="2"
                                                             Template="{DynamicResource AddControlTextboxTemplate}"
                                                             HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                                             Style="{DynamicResource AddControlTextBoxStyle}"
                                                             IsReadOnly="{Binding ReadonlySecureItem}"
                                                             Text="{Binding AddressZipCode, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                                                    <!--Nignth row-->
                                                    <TextBlock Grid.Row="17" Grid.Column="0"
                                                               Text="{DynamicResource TextForCategory}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />
                                                    <ComboBox Grid.Row="17" Grid.Column="2"
                                                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                              HorizontalContentAlignment="Left"
                                                              ItemsSource="{Binding Categories}"
                                                              SelectedItem="{Binding SelectedCategory, UpdateSourceTrigger=PropertyChanged}"
                                                              Style="{DynamicResource AddControlComboboxStyle}"
                                                              ItemContainerStyle="{DynamicResource LocationComboboxItemStyle}"
                                                              TextSearch.TextPath="Name" IsTextSearchEnabled="True"
                                                              IsEnabled="{Binding Enabled}">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding Name}" />
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                    <Image  Grid.Row="17" Grid.Column="3" Margin="4,0,0,0"
                                                           ToolTip="{DynamicResource AddNewCategory}"
                                                           Style="{DynamicResource AddCategoryImageStyle}"
                                                           Height="15" RenderOptions.BitmapScalingMode="HighQuality">
                                                        <Image.InputBindings>
                                                            <MouseBinding MouseAction="LeftClick"
                                                                          Command="{Binding AddCategoryClickCommand}"/>
                                                        </Image.InputBindings>
                                                    </Image>

                                                    <!--tenth row-->
                                                    <TextBlock Grid.Row="19" Grid.Column="0"
                                                               Text="{DynamicResource Notes}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />
                                                    <TextBox Grid.Row="19" Grid.Column="2"
                                                             Height="46" Width="170" Style="{DynamicResource NotesTextBoxStyle}"
                                                             IsReadOnly="{Binding ReadonlySecureItem}"
                                                             Text="{Binding AddressNotes, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />


                                                </Grid>

                                                <!-- Add phone grid -->
                                                <Grid x:Name="AddPhoneGrid" Grid.Row="1" Grid.Column="1"
                                                      Margin="0,0,0,0"
                                                      Visibility="{Binding PhoneContentVisibility, Converter={StaticResource BoolToVisiblity}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="10" />
                                                    <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="6" />
                                                    <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="6" />
                                                    <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="6" />
                                                        <RowDefinition Height="46" />
                                                    </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="165" />
                                                    <ColumnDefinition Width="25" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <!--first row-->
                                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                                               Text="{DynamicResource Nickname}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />
                                                    <TextBox Grid.Row="1" Grid.Column="2"
                                                             Template="{DynamicResource AddControlTextboxTemplate}"
                                                             HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                                             Style="{DynamicResource AddControlTextBoxStyle}"
                                                             IsReadOnly="{Binding ReadonlySecureItem}"
                                                             Text="{Binding PhoneNickname, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />


                                                    <!--second row-->
                                                    <TextBlock Grid.Row="3" Grid.Column="0"
                                                               Text="{DynamicResource PhoneNumber}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />
                                                    <TextBox Name="txtPhoneNumber"  Grid.Row="3" Grid.Column="2"
                                                             Template="{DynamicResource AddControlTextboxTemplate}"
                                                             HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                                             Style="{DynamicResource AddControlTextBoxStyle}"
                                                             IsReadOnly="{Binding ReadonlySecureItem}"
                                                             Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, Mode=TwoWay}" />
                                                    <TextBlock Grid.Row="3" Grid.Column="2" IsHitTestVisible="False" Text="{DynamicResource RequiredField}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Red" FontStyle="Italic">
                                                        <TextBlock.Style>
                                                            <Style TargetType="{x:Type TextBlock}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <MultiDataTrigger>
                                                                        <MultiDataTrigger.Conditions>
                                                                            <Condition Binding="{Binding Text, ElementName=txtPhoneNumber}" Value=""/>
                                                                            <Condition Binding="{Binding IsValidErrorMessageVisible}" Value="true" />
                                                                        </MultiDataTrigger.Conditions>
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </MultiDataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <!--Third row-->
                                                    <TextBlock Grid.Row="5" Grid.Column="0"
                                                               Text="{DynamicResource TextForCategory}"
                                                               Style="{DynamicResource AddcontrolTextBlockStyle}" />
                                                    <ComboBox Grid.Row="5" Grid.Column="2"
                                                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                              HorizontalContentAlignment="Left"
                                                              ItemsSource="{Binding Categories}"
                                                              SelectedItem="{Binding SelectedCategory, UpdateSourceTrigger=PropertyChanged}"
                                                              Style="{DynamicResource AddControlComboboxStyle}"
                                                              ItemContainerStyle="{DynamicResource LocationComboboxItemStyle}"
                                                              TextSearch.TextPath="Name" IsTextSearchEnabled="True" IsEnabled="{Binding Enabled}">
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding Name}" />
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                    <Image  Grid.Row="5" Grid.Column="3" Margin="4,0,0,0"
                                                           ToolTip="{DynamicResource AddNewCategory}"
                                                           Style="{DynamicResource AddCategoryImageStyle}"
                                                           Height="15" RenderOptions.BitmapScalingMode="HighQuality">
                                                        <Image.InputBindings>
                                                            <MouseBinding MouseAction="LeftClick"
                                                                          Command="{Binding AddCategoryClickCommand}"/>
                                                        </Image.InputBindings>
