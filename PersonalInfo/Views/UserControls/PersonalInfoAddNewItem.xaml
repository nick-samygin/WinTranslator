                                <TextBox Grid.Row="3" Grid.Column="3"
                                         Template="{DynamicResource AddControlTextboxTemplate}" Height="25"
                                         HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                         Style="{DynamicResource AddControlTextBoxStyle}"
                                         Text="{Binding RecipientEmail}" />
                                <!--second row-->
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{DynamicResource Message}"
                                           Style="{DynamicResource AddcontrolTextBlockStyle}" TextWrapping="Wrap" />
