                                                        Style="{DynamicResource CancelButton_style}" 
                                                        Visibility="{Binding sharedStatus, Converter={StaticResource ActionToVisibilty}, ConverterParameter='resend'}">
                                        </Button>

                                <Button Grid.Column="5" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" 
