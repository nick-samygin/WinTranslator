                                                        Style="{DynamicResource CancelButton_style}" 
                                                        Visibility="{Binding sharedStatus, Converter={StaticResource ActionToVisibilty}, ConverterParameter='remove'}">
                                </Button>
                            </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListView>
                    <!--</ScrollViewer>-->
                </Grid>

