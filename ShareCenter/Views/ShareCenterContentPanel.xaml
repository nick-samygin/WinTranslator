                                                        Foreground="{DynamicResource PasswordBossGreenColor}" Command="{Binding ElementName=SharedWithMePasswords,Path=DataContext.SendDataShareCommand}"  CommandParameter="{Binding uuid}"
                                                        Style="{DynamicResource CancelButton_style}" 
                                                        Visibility="{Binding sharedStatus, Converter={StaticResource ActionToVisibilty}, ConverterParameter='shareData'}">
