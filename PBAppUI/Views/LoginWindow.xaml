<Window x:Class="PasswordBoss.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Boss"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15" Background="{DynamicResource TransparentColor}">
        <Grid.Effect>
            <DropShadowEffect Direction="300" BlurRadius="15" ShadowDepth="10" Opacity="0.5" RenderingBias="Quality" />
        </Grid.Effect>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition MinHeight="400" Height="*" />
        </Grid.RowDefinitions>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" HorizontalAlignment="Stretch" Navigating="HandleNavigating">
        </Frame>
    </Grid>
</Window>