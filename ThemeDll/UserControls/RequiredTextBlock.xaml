<UserControl x:Class="PasswordBoss.UserControls.RequiredTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PasswordBoss.UserControls"
             mc:Ignorable="d" >

    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}},Path=Text}" Style="{DynamicResource AddItemTextBlock}"/>
        <TextBlock Text="*" VerticalAlignment="Top" FontSize="12" Margin="0 8 0 0" Style="{DynamicResource AddItemTextBlock}"/>
    </StackPanel>
</UserControl>
