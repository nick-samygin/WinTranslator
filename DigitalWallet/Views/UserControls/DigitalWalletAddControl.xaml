<UserControl x:Class="PasswordBoss.Views.UserControls.DigitalWalletAddControl"
             Name="DigitalWalletAddEditControl"
             xmlns:local="clr-namespace:PasswordBoss.Views.UserControls"
             xmlns:localPass ="clr-namespace:PasswordBoss.Helpers"
             xmlns:vm="clr-namespace:PasswordBoss.ViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"    
             mc:Ignorable="d" 
             d:DesignHeight="550"
             Height="Auto" Width="330" MaxWidth="330" >

    <!--  Resources  -->

    <UserControl.Resources>
        <localPass:BoolToGridRowHeightConverter x:Key="BoolToGridRowHeightConverter"/>
        <localPass:EnumMatchToBooleanConverter x:Key="enumConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisiblity"/>
        <localPass:IsNullConverter x:Key="IsNullConverter" />
    </UserControl.Resources>


    <!--  Elements  -->

    <Grid>
        <Border BorderThickness="0.5,0,0,0" BorderBrush="{DynamicResource AccountSettingsGrayBackgroundColor}">
            <TabControl  x:Name="AddNewItemTabControl" Style="{DynamicResource AddControlTabControlStyle}" Width="330"
                        SelectedIndex="{Binding SelectedIndexTabControl,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding TabSelectionChangedCommand}"
                                            CommandParameter="{Binding ElementName=AddNewItemTabControl}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>

                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TabItem}">
                                    <Grid x:Name="grid"  >
                                        <Border Name="Border" Background="{DynamicResource TextboxBorderbrush}" BorderThickness="0 2 0 0" >
                                            <StackPanel  Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <ContentPresenter ContentSource="Header" VerticalAlignment="Center" 
                                                                   HorizontalAlignment="Stretch"></ContentPresenter>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource WhiteColor}" />
                                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PasswordBossGreenColor}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource TextboxBorderbrush}" />
                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource TextboxBorderbrush}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem x:Name="tabSettings" Height="30" Width="163" Background="{DynamicResource WhiteColor}" BorderThickness="0" BorderBrush="White">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image x:Name="imgTabSet" Source="{Binding SettingTabIcon, UpdateSourceTrigger=PropertyChanged}" Height="15" Width="15" HorizontalAlignment="Right"/>
                            <TextBlock Margin="10,0,0,0" HorizontalAlignment="Center" Style="{DynamicResource AddcontrolTextBlockStyle}"
                                           FontFamily="{DynamicResource ProximaBold}"  Text="{DynamicResource Settings}" />
                        </StackPanel>
                    </TabItem.Header>
                    <TabItem.Content>
                            <Grid>
                                <!--CreditCardSettingGrid-->
                                <Grid Name="CreditCardSettingGrid" Background="{DynamicResource WhiteColor}" Height="Auto" Margin="0,0,0,0" 
                                       Visibility="{Binding CreditCardVisibility, Converter={StaticResource BoolToVisiblity}, UpdateSourceTrigger=PropertyChanged}" >

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" MaxHeight="80" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="70" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" Grid.Column="1" Width="260" Margin="0,0,0,0" 
                                          HorizontalAlignment="Left">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="10" />
                                            <RowDefinition Height="65" />
                                            <RowDefinition Height="10" />
                                        </Grid.RowDefinitions>

                                        <Image Source="{Binding ItemImage, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Height="65" Width="110" 
                                               Grid.Row="1" HorizontalAlignment="Left" Margin="0,0,0,0" />
                                        <Grid Grid.Row="1" Grid.Column="1" Height="11"  Margin="0,0,0,0" VerticalAlignment="Top" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="11"/>
                                                <ColumnDefinition Width="4"/>
                                                <ColumnDefinition Width="11"/>
                                                <ColumnDefinition Width="4"/>
                                                <ColumnDefinition Width="11"/>
                                                <ColumnDefinition Width="4"/>
                                                <ColumnDefinition Width="11"/>
                                                <ColumnDefinition Width="4"/>
                                                <ColumnDefinition Width="11"/>
                                                <ColumnDefinition Width="4"/>
                                                <ColumnDefinition Width="11"/>
                                                <ColumnDefinition Width="4"/>
                                                <ColumnDefinition Width="11"/>
                                                <ColumnDefinition Width="4"/>
                                                <ColumnDefinition Width="11"/>
                                                <ColumnDefinition Width="4"/>
                                                <ColumnDefinition Width="11"/>
                                            </Grid.ColumnDefinitions>
                                        <RadioButton Focusable="False"    Name="Color1RadioBtn" GroupName="CreditCardColor"  Grid.Column="0"  Style="{DynamicResource ColoredEllipseStyle}" Background="#ED6B73" IsChecked="{Binding Path=CreditCardColor,Converter={StaticResource enumConverter}, ConverterParameter=c_ED6B73}" IsEnabled="{Binding Enabled}" />
                                        <RadioButton   Focusable="False"  Name="Color2RadioBtn" GroupName="CreditCardColor"  Grid.Column="2" Style="{DynamicResource ColoredEllipseStyle}" Background="#F9E0BC"  IsChecked="{Binding Path=CreditCardColor,Converter={StaticResource enumConverter}, ConverterParameter=c_F9E0BC}" IsEnabled="{Binding Enabled}"/>
                                        <RadioButton  Focusable="False"   Name="Color3RadioBtn" GroupName="CreditCardColor" Grid.Column="4" Style="{DynamicResource ColoredEllipseStyle}" Background="#E0D438"  IsChecked="{Binding Path=CreditCardColor,Converter={StaticResource enumConverter}, ConverterParameter=c_E0D438}" IsEnabled="{Binding Enabled}"/>
                                        <RadioButton Focusable="False"   Name="Color4RadioBtn" GroupName="CreditCardColor"  Grid.Column="6" Style="{DynamicResource ColoredEllipseStyle}" Background="#8DC63F"  IsChecked="{Binding Path=CreditCardColor,Converter={StaticResource enumConverter}, ConverterParameter=c_8DC63F}" IsEnabled="{Binding Enabled}"/>
                                        <RadioButton  Focusable="False"  Name="Color5RadioBtn"  GroupName="CreditCardColor"  Grid.Column="8" Style="{DynamicResource ColoredEllipseStyle}" Background="#45C2F4"  IsChecked="{Binding Path=CreditCardColor,Converter={StaticResource enumConverter}, ConverterParameter=c_45C2F4}" IsEnabled="{Binding Enabled}"/>
                                        <RadioButton  Focusable="False"   Name="Color6RadioBtn" GroupName="CreditCardColor"  Grid.Column="10"  Style="{DynamicResource ColoredEllipseStyle}" Background="#203AC4"  IsChecked="{Binding Path=CreditCardColor,Converter={StaticResource enumConverter}, ConverterParameter=c_203AC4}" IsEnabled="{Binding Enabled}"/>
                                        <RadioButton Focusable="False"   Name="Color7RadioBtn" GroupName="CreditCardColor"  Grid.Column="12"  Style="{DynamicResource ColoredEllipseStyle}" Background="#793DA8"  IsChecked="{Binding Path=CreditCardColor,Converter={StaticResource enumConverter}, ConverterParameter=c_793DA8}" IsEnabled="{Binding Enabled}"/>
                                        <RadioButton  Focusable="False"   Name="Color8RadioBtn" GroupName="CreditCardColor"  Grid.Column="14" Style="{DynamicResource ColoredEllipseStyle}" Background="#010101"  IsChecked="{Binding Path=CreditCardColor,Converter={StaticResource enumConverter}, ConverterParameter=c_010101}" IsEnabled="{Binding Enabled}"/>
                                        <RadioButton Focusable="False"   Name="Color9RadioBtn" GroupName="CreditCardColor"  Grid.Column="16" Style="{DynamicResource ColoredEllipseStyle}" Background="#696F73"  IsChecked="{Binding Path=CreditCardColor,Converter={StaticResource enumConverter}, ConverterParameter=c_696F73}" IsEnabled="{Binding Enabled}"/>
                                        </Grid>

                                    <Grid Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,10,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <StackPanel Margin="0,0,0,0" Grid.Row="0" Orientation="Horizontal"
                                                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                Visibility="{Binding DatesVisibility, Converter={StaticResource BoolToVisiblity}, UpdateSourceTrigger=PropertyChanged}">
                                                <TextBlock Text="{DynamicResource CreatedDate}" HorizontalAlignment="Right"
                                                   FontFamily="{DynamicResource ProximaRegular}" FontSize="9"
                                                   Foreground="{DynamicResource WatermarkLightGrayColor}" />
                                                <TextBlock Text="{Binding DateCreated, StringFormat=d,UpdateSourceTrigger=PropertyChanged}"
                                                   HorizontalAlignment="Right"
                                                   FontFamily="{DynamicResource ProximaRegular}" FontSize="9"
                                                   Foreground="{DynamicResource WatermarkLightGrayColor}" Padding="7 0 0 0"/>
                                            </StackPanel>
                                            <StackPanel Grid.Row="1" Margin="0,7,0,0" VerticalAlignment="Top"
                                                Orientation="Horizontal" HorizontalAlignment="Right"
                                                Visibility="{Binding DatesVisibility, Converter={StaticResource BoolToVisiblity}, UpdateSourceTrigger=PropertyChanged}">
                                                <TextBlock Text="{DynamicResource LastModifiedDate}"
                                                   HorizontalAlignment="Right"
                                                   FontFamily="{DynamicResource ProximaRegular}" FontSize="9"
                                                   Foreground="{DynamicResource WatermarkLightGrayColor}" />
                                                <TextBlock Text="{Binding DateModified, StringFormat=d, UpdateSourceTrigger=PropertyChanged}"
                                                   HorizontalAlignment="Right"
                                                   FontFamily="{DynamicResource ProximaRegular}" FontSize="9"
                                                   Foreground="{DynamicResource WatermarkLightGrayColor}" Padding="7 0 0 0"/>
                                            </StackPanel>

                                            <!--<StackPanel Grid.Column="1" Margin="0,0,0,0" Grid.Row="0" Orientation="Horizontal"
                                                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                Visibility="{Binding DatesVisibility, Converter={StaticResource BoolToVisiblity}}">
                                                <TextBlock Text="{DynamicResource CreatedDate}" HorizontalAlignment="Right"
                                                   FontFamily="{DynamicResource ProximaRegular}" FontSize="9"
                                                   Foreground="{DynamicResource WatermarkLightGrayColor}" />
                                                <TextBlock Text="{Binding DateCreated, StringFormat=d}"
                                                   HorizontalAlignment="Right"
                                                   FontFamily="{DynamicResource ProximaRegular}" FontSize="9"
                                                   Foreground="{DynamicResource WatermarkLightGrayColor}" Padding="7 0 0 0"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,7,0,0" VerticalAlignment="Top"
                                                Orientation="Horizontal" HorizontalAlignment="Right"
                                                Visibility="{Binding DatesVisibility, Converter={StaticResource BoolToVisiblity}}">
                                                <TextBlock Text="{DynamicResource LastModifiedDate }"
                                                   HorizontalAlignment="Right"
                                                   FontFamily="{DynamicResource ProximaRegular}" FontSize="9"
                                                   Foreground="{DynamicResource WatermarkLightGrayColor}" />
                                                <TextBlock Text="{Binding DateModified, StringFormat=d}"
                                                   HorizontalAlignment="Right"
                                                   FontFamily="{DynamicResource ProximaRegular}" FontSize="9"
                                                   Foreground="{DynamicResource WatermarkLightGrayColor}" Padding="7 0 0 0"/>
                                            </StackPanel>-->
                                        </Grid>

                                    </Grid>

                                    <ScrollViewer x:Name="CreditCardScrollViewer" Grid.Row="1" Grid.Column="1" HorizontalScrollBarVisibility="Disabled"
                                              VerticalScrollBarVisibility="Auto" Margin="0,0,5,0" 
                                                  Template="{DynamicResource CustomScrollViewerTemplate}" >
                                        <AdornerDecorator>
                                            <Grid Margin="0,0,0,0" >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="10"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="6"/>
                                                <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="6"/>
                                                <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="6"/>
                                                <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="6"/>
                                                <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="6"/>
                                                <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="6"/>
                                                <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="6"/>
                                                <!--<RowDefinition Height="{Binding IssuingDateVisibility, Converter={StaticResource BoolToGridRowHeightConverter}, ConverterParameter=20, UpdateSourceTrigger=PropertyChanged}"/>-->
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="{Binding IssuingDateVisibility, Converter={StaticResource BoolToGridRowHeightConverter}, ConverterParameter=6, UpdateSourceTrigger=PropertyChanged}"/>
                                                <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="6"/>
                                                <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="6"/>
                                                <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="6"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="90"/>
                                                    <ColumnDefinition Width="5"/>
                                                    <ColumnDefinition Width="155"/>
                                                    <ColumnDefinition Width="25"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!--first row-->
                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource Country}" Style="{DynamicResource AddcontrolTextBlockStyle}" />
                                                <ComboBox Grid.Row="1" Grid.Column="2"   VerticalAlignment="Stretch"
                                                      HorizontalContentAlignment="Left" 
                                                        ItemsSource="{Binding Countries, UpdateSourceTrigger=PropertyChanged}"
                                                          Style="{DynamicResource AddControlComboboxStyle}" ItemContainerStyle="{DynamicResource LocationComboboxItemStyle}"
                                                        SelectedItem="{Binding SelectedCountry, UpdateSourceTrigger=PropertyChanged}"
                                                        TextSearch.TextPath="Name" IsTextSearchEnabled="True"
                                                          IsEnabled="{Binding Enabled}">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Value}" />
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>

                                                <!--second row-->
                                            <TextBlock Grid.Row="3" Grid.Column="0"  Text="{DynamicResource Nickname}" Style="{DynamicResource AddcontrolTextBlockStyle}"/>
                                                <TextBox Grid.Row="3" Grid.Column="2"   Template="{DynamicResource AddControlTextboxTemplate}"  
                                                     HorizontalAlignment="Stretch" VerticalAlignment="Center" Style="{DynamicResource AddControlTextBoxStyle}" 
                                                         IsReadOnly="{Binding ReadonlySecureItem}"
                                                         Text="{Binding CreditCardNickname, UpdateSourceTrigger=PropertyChanged}"/>
                                                <!--Third row-->
                                            <TextBlock Grid.Row="5" Grid.Column="0"  Text="{DynamicResource NameOnCard}" Style="{DynamicResource AddcontrolTextBlockStyle}"/>
                                                <TextBox Grid.Row="5" Grid.Column="2"  Template="{DynamicResource AddControlTextboxTemplate}" Name="txtNameOnCard"
                                                     HorizontalAlignment="Stretch" VerticalAlignment="Center" Style="{DynamicResource AddControlTextBoxStyle}"
                                                         IsReadOnly="{Binding ReadonlySecureItem}"
                                                          Text="{Binding NameOnCard, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
                                            
                                                <TextBlock Grid.Row="5" Grid.Column="2" IsHitTestVisible="False" Text="{DynamicResource RequiredField}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Red" FontStyle="Italic">
                                                <TextBlock.Style>
                                                    <Style TargetType="{x:Type TextBlock}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding Text, ElementName=txtNameOnCard}" Value=""/>
                                                                    <Condition Binding="{Binding IsValidErrorMessageVisible}" Value="true" />
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!--Fourth row-->
                                                <TextBlock Grid.Row="7" Grid.Column="0" Text="{DynamicResource CardNumber}" 
                                                           Style="{DynamicResource AddcontrolTextBlockStyle}"/>

                                                <TextBox Grid.Row="7" Grid.Column="2" Template="{DynamicResource AddControlTextboxTemplate}" Name="txtCreditCardNumber"
                                                          HorizontalAlignment="Stretch" VerticalAlignment="Center" Style="{DynamicResource AddControlTextBoxStyle}"
                                                         IsReadOnly="{Binding ReadonlySecureItem}"
                                                        Text="{Binding CardNumber, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
                                                <TextBlock Grid.Row="7" Grid.Column="2" IsHitTestVisible="False" Text="{DynamicResource RequiredField}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Red" FontStyle="Italic">
                                                    <TextBlock.Style>
                                                        <Style TargetType="{x:Type TextBlock}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{Binding Text, ElementName=txtCreditCardNumber}" Value=""/>
                                                                        <Condition Binding="{Binding IsValidErrorMessageVisible}" Value="true" />
                                                                    </MultiDataTrigger.Conditions>
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </MultiDataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                            <Image Grid.Row="7" Grid.Column="3" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                   ToolTip="{DynamicResource Copy}" Height="15" Width="12"
                                                   Style="{DynamicResource FileImageStyle}">
                                                <Image.InputBindings>
                                                    <MouseBinding MouseAction="LeftClick" Command="{Binding CopyCommand}" CommandParameter="CardNumber" />
                                                </Image.InputBindings>
                                            </Image>
                                            <!--Password generator UI ends-->
                                                <!--fifth row-->
                                            <TextBlock Grid.Row="9" Grid.Column="0"  Text="{DynamicResource CardType}" Style="{DynamicResource AddcontrolTextBlockStyle}"/>
                                                
                                            <ComboBox Name="CardTypeCombobox" Grid.Row="9" Grid.Column="2"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                       HorizontalContentAlignment="Left" 
                                                       ItemsSource="{Binding CreditCards}"
                                                       Style="{DynamicResource AddControlComboboxStyle}" ItemContainerStyle="{DynamicResource LocationComboboxItemStyle}"
                                                       SelectedItem="{Binding SelectedCreditCard, UpdateSourceTrigger=PropertyChanged}" 
                                                       TextSearch.TextPath="Value" IsTextSearchEnabled="True"
                                                      IsEnabled="{Binding Enabled}">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Value}" />
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                            </ComboBox>
                                                
                                            <TextBlock Text="{DynamicResource CardType}" IsHitTestVisible="False" Grid.Row="9" Grid.Column="2" >
                                                <TextBlock.Style>
                                                    <Style>
                                                        <Setter Property="TextBlock.Visibility" Value="Hidden" />
                                                        <Setter Property="TextBlock.FontSize" Value="12"/>
                                                        <Setter Property="TextBlock.Foreground" Value="{DynamicResource WatermarkLightGrayColor}"/>
                                                        <Setter Property="TextBlock.Margin" Value="3,3,3,3" />
                                                        <Setter Property="TextBlock.FontFamily" Value="{DynamicResource ProximaRegular}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=CardTypeCombobox, Path=SelectedItem, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource IsNullConverter}}" Value="True">
                                                                <Setter Property="TextBlock.Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!--sixth row-->
                                            <TextBlock Grid.Row="11" Grid.Column="0"  Text="{DynamicResource Expires}" Style="{DynamicResource AddcontrolTextBlockStyle}"/>
                                                <Grid Grid.Row="11" Grid.Column="2" Width="70" HorizontalAlignment="Left" VerticalAlignment="Stretch" >
                                                    <ComboBox x:Name="MonthCombobox" HorizontalAlignment="Left" VerticalAlignment="Stretch" 
                                                        Width="70" VerticalContentAlignment="Center"
                                                          ItemsSource="{Binding ExpiresMonths}"
                                                          Style="{DynamicResource AddControlComboboxStyle}" ItemContainerStyle="{DynamicResource LocationComboboxItemStyle}"
                                                          SelectedItem="{Binding ExpiresMonth, UpdateSourceTrigger=PropertyChanged}"
                                                              IsEnabled="{Binding Enabled}"/>
                                                    <TextBlock Text="{DynamicResource CreditCardMonth}" IsHitTestVisible="False" >
                                                        <TextBlock.Style>
                                                            <Style>
                                                                <Setter Property="TextBlock.Visibility" Value="Hidden" />
                                                                <Setter Property="TextBlock.FontSize" Value="12"/>
                                                            <Setter Property="TextBlock.Foreground" Value="{DynamicResource WatermarkLightGrayColor}"/>
                                                                <Setter Property="TextBlock.Margin" Value="3,3,3,3" />
                                                                <Setter Property="TextBlock.FontFamily" Value="{DynamicResource ProximaRegular}" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ElementName=MonthCombobox, Path=SelectedItem, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource IsNullConverter}}" Value="True">
                                                                        <Setter Property="TextBlock.Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                                <Grid Grid.Row="11" Grid.Column="2" Width="70" HorizontalAlignment="Right">
                                                    <ComboBox x:Name="YearCombobox"
                                                    BorderThickness="1" VerticalAlignment="Stretch"                                                      
                                                       VerticalContentAlignment="Center"
                                                          ItemsSource="{Binding ExpiresYears}"
                                                          Style="{DynamicResource AddControlComboboxStyle}" ItemContainerStyle="{DynamicResource LocationComboboxItemStyle}"
                                                          SelectedItem="{Binding ExpiresYear, UpdateSourceTrigger=PropertyChanged}"
                                                              IsEnabled="{Binding Enabled}"/>
                                                    <TextBlock Text="{DynamicResource CreditCardYear}" IsHitTestVisible="False" >
                                                        <TextBlock.Style>
                                                            <Style>
                                                                <Setter Property="TextBlock.Visibility" Value="Hidden" />
                                                                <Setter Property="TextBlock.FontSize" Value="12"/>
                                                            <Setter Property="TextBlock.Foreground" Value="{DynamicResource WatermarkLightGrayColor}"/>
                                                                <Setter Property="TextBlock.Margin" Value="3,3,3,3" />
                                                                <Setter Property="TextBlock.FontFamily" Value="{DynamicResource ProximaRegular}" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ElementName=YearCombobox, Path=SelectedItem, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource IsNullConverter}}" Value="True">
                                                                        <Setter Property="TextBlock.Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>

                                                <!--Seventh row-->
                                                <TextBlock Grid.Row="13" Grid.Column="0"  Text="{DynamicResource IssuingBank}" Style="{DynamicResource AddcontrolTextBlockStyle}"/>
                                                <TextBox Name="IssueBankTextBox" Grid.Row="13" Grid.Column="2"   HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                                     Style="{DynamicResource AddControlTextBoxStyle}" Template="{DynamicResource AddControlTextboxTemplate}"
                                                         IsReadOnly="{Binding ReadonlySecureItem}"
                                                         Text="{Binding IssueBank, UpdateSourceTrigger=PropertyChanged}" >
                                                </TextBox>
                                            
                                                <!--Eighth row -->
                                            <TextBlock Grid.Row="15" Grid.Column="0"  Text="{DynamicResource IssueDate}" Style="{DynamicResource AddcontrolTextBlockStyle}"
                                                           Visibility="{Binding IssuingDateVisibility, Converter={StaticResource BoolToVisiblity}, UpdateSourceTrigger=PropertyChanged}" />
                                            <TextBox Name="IssuingDateTextBox" Grid.Row="15" Grid.Column="2"   HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                                         Style="{DynamicResource AddControlTextBoxStyle}" Template="{DynamicResource AddControlTextboxTemplate}"
                                                         IsReadOnly="{Binding ReadonlySecureItem}"
                                                         Text="{Binding IssuingDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                                         Visibility="{Binding IssuingDateVisibility, Converter={StaticResource BoolToVisiblity}, UpdateSourceTrigger=PropertyChanged}" />




                                            <!--Nignth row-->
                                            <TextBlock Grid.Row="17" Grid.Column="0"  Text="{DynamicResource CVV}"  Style="{DynamicResource AddcontrolTextBlockStyle}"/>
                                                <TextBox Grid.Row="17" Grid.Column="2"   Width="70" Template="{DynamicResource AddControlTextboxTemplate}" 
                                                      HorizontalAlignment="Left" VerticalAlignment="Center" Style="{DynamicResource AddControlTextBoxStyle}"
                                                         IsReadOnly="{Binding ReadonlySecureItem}"
                                                     Text="{Binding Cvv, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                                            <!--tenth row-->
                                            <TextBlock Grid.Row="19" Grid.Column="0"  Text="{DynamicResource PIN}"  Style="{DynamicResource AddcontrolTextBlockStyle}"/>
                                                <TextBox Grid.Row="19" Grid.Column="2"   Width="70" Template="{DynamicResource AddControlTextboxTemplate}" 
                                                      HorizontalAlignment="Left" VerticalAlignment="Center" Style="{DynamicResource AddControlTextBoxStyle}"
                                                         IsReadOnly="{Binding ReadonlySecureItem}"
                                                      Text="{Binding Pin, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>


                                                <!--Eleventh row-->
                                                <TextBlock Grid.Row="21" Grid.Column="0" Text="{DynamicResource BillingAddress}" Style="{DynamicResource AddcontrolTextBlockStyle}"/>
                                                <ComboBox Grid.Row="21" Grid.Column="2" 
                                                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  HorizontalContentAlignment="Left" 
                                                    Style="{DynamicResource AddControlComboboxStyle}" ItemContainerStyle="{DynamicResource LocationComboboxItemStyle}"
                                                    ItemsSource="{Binding Addresses}"
                                                    SelectedItem="{Binding SelectedAddress, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                    TextSearch.TextPath="Name" IsTextSearchEnabled="True"
                                                    IsEnabled="{Binding Enabled}">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Name}" />
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>

                                            <Image Grid.Row="21" Grid.Column="3" Height="16" Width="16" HorizontalAlignment="Center"
                                                   ToolTip="{DynamicResource BillingAddressToolTip}" VerticalAlignment="Center"
                                                   Source="{DynamicResource imgHelpGray}" />

                                            <!--Twelveth row-->
                                            <TextBlock Grid.Row="23" Grid.Column="0" Text="{DynamicResource TextForCategory}" Style="{DynamicResource AddcontrolTextBlockStyle}"/>
                                                <ComboBox Grid.Row="23" Grid.Column="2" 
                                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  HorizontalContentAlignment="Left" 
                                                    ItemsSource="{Binding Categories}"
                                                    Style="{DynamicResource AddControlComboboxStyle}" ItemContainerStyle="{DynamicResource LocationComboboxItemStyle}"
                                                    SelectedItem="{Binding SelectedCategory, UpdateSourceTrigger=PropertyChanged}"
                                                    TextSearch.TextPath="Name" IsTextSearchEnabled="True"   IsEnabled="{Binding Enabled}"   >
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Name}" />
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>

                                                <Image  Grid.Row="23" Grid.Column="3" Margin="0,0,0,0"
                                                   ToolTip="{DynamicResource AddNewCategory}"
